<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Companies\Domain\Entity\Employee\Employee" table="companies_employee">
        <id name="id" type="string" length="26">
            <generator strategy="NONE"/>
        </id>

        <field name="hired" type="boolean">
            <options>
                <option name="default">false</option>
            </options>
        </field>
        <field name="createdAt" type="datetime_immutable"/>
        <field name="hiredAt" type="datetime_immutable" nullable="true"/>
        <field name="canInviteEmployees" type="boolean">
            <options>
                <option name="default">false</option>
            </options>
        </field>

        <embedded name="user"
                  class="App\Shared\Domain\Entity\ValueObject\NullableUserUlid"
                  column-prefix="user_"
        />

        <embedded name="contact"
                  class="App\Companies\Domain\Entity\Employee\Contact"
                  column-prefix="contact_"
        />


        <one-to-one field="invite" target-entity="App\Companies\Domain\Entity\Employee\Invite" mapped-by="employee"/>

        <many-to-one field="company"
                     target-entity="App\Companies\Domain\Entity\Company\Company"
                     inversed-by="$employees">
        </many-to-one>
    </entity>

</doctrine-mapping>